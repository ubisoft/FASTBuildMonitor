<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackground">#FFFFFF</SolidColorBrush>

    <LinearGradientBrush x:Key="StatusBarBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="{DynamicResource ControlLightColor}" Offset="0.0" />
                <GradientStop Color="{DynamicResource ControlMediumColor}" Offset="1.0" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TabControlBorderBrush">#41020202</SolidColorBrush>

    <LinearGradientBrush x:Key="TabControlBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="{DynamicResource ContentAreaColorLight}" Offset="0" />
        <GradientStop Color="{DynamicResource ContentAreaColorDark}" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ForegroundColor">#000000</SolidColorBrush>

</ResourceDictionary>